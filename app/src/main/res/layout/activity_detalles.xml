<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.jhonatan.laboratorio_ii.DetallesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iServicio"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:drawableLeft="@android:drawable/btn_star_big_off"
                android:text="AÃ±adir a favoritos"
                android:id="@+id/bFavoritos"
                android:onClick="onButtonClicked"
                android:textColor="@color/white"
                android:background="@color/darkviolet"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_dialog_map"
                android:layout_gravity="center"
                android:text="Ver Mapa"
                android:id="@+id/bMapa"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:background="@color/darkviolet"
                android:onClick="onButtonClicked"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tNombre"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"/>



    </LinearLayout>

</ScrollView>
